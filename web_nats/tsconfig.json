{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "lib": ["dom", "esnext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "outDir": "./dist",
    "target": "esnext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vite/client", "node"]
  },
  "include": ["src/**/*", "vite.config.ts"],
  "exclude": ["node_modules"]
}